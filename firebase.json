{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "src/**",
      "tests/**",
      "coverage/**",
      "package.json",
      "package-lock.json",
      "tsconfig.json",
      "vitest.config.ts",
      "*.md"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
